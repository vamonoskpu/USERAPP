<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.484" />

    <TextView
        android:id="@+id/recordlabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="VAMONOS"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recordbtn" />

    <Button
        android:id="@+id/recordbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="@color/colorGoogleSignInPressed"
        android:text="주문시 꾹 눌러주세요"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="353dp"
        android:layout_height="210dp"
        android:layout_marginTop="40dp"
        android:background="#00000000"
        android:tint="#00FCD26F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />


    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="144dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/completebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recordlabel"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/card"
            android:layout_width="103dp"
            android:layout_height="100dp"

            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/clickcard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="81dp"
            android:layout_marginTop="20dp"
            android:contentDescription="TODO"
            android:tint="#FFFF9800"
            android:visibility="invisible"
            app:srcCompat="@drawable/card" />

        <ImageView
            android:id="@+id/money"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/money" />

        <ImageView
            android:id="@+id/clickmoney"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="30dp"
            android:contentDescription="TODO"
            android:tint="#FFFF9800"
            android:visibility="invisible"
            app:srcCompat="@drawable/clickmoney" />

    </FrameLayout>

    <Button
        android:id="@+id/completebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="주문 완료"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="230dp" />

</androidx.constraintlayout.widget.ConstraintLayout>