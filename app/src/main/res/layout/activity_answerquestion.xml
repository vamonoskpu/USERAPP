<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Answerquestion">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문의 리스트"
        android:textColor="#0A0A0A"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_weight="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0A0A0A"
            android:gravity="center"
            android:textSize="20dp"
            android:text="제목"
            android:textStyle="bold">

        </TextView>
        <TextView

            android:layout_weight="0.7"
            android:gravity="center"
            android:textColor="#0A0A0A"
            android:id="@+id/title1"
            android:textSize="18dp"
            android:background="@drawable/button_design2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="제목"
            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >

        <TextView
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="#0A0A0A"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="작성자"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:textColor="#0A0A0A"
            android:textSize="18dp"

            android:id="@+id/writer"
            android:gravity="center"
            android:background="@drawable/button_design2"

            android:hint="김철수"></TextView>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >
        <TextView
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="#0A0A0A"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="작성일"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:layout_weight="0.8"
            android:id="@+id/date"
            android:gravity="center"
            android:textColor="#0A0A0A"
            android:background="@drawable/button_design2"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜....">


        </TextView>
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#0A0A0A"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:text="내용">


    </TextView>

    <TextView

        android:layout_marginTop="20dp"
        android:id="@+id/contents"
        android:padding="30dp"
        android:textColor="#0A0A0A"
        android:background="@drawable/button_design2"
        android:textSize="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"          android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="내요요용"></TextView>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#0A0A0A"
        android:textSize="18dp"
        android:layout_marginLeft="40dp"
        android:text="답변"/>


    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/answercontents"
        android:padding="50dp"
        android:textSize="20dp"
        android:background="@drawable/button_design"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"          android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="미답변" />






</LinearLayout>