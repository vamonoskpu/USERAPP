<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ffffff">
            </solid>
            <corners android:radius="5dp"></corners>
            <stroke android:width="0.5dp" android:color="#AAA8A6"></stroke>
            <padding android:top="10dp" android:bottom="5dp" android:right = "30dp" android:left="30dp"></padding>
            //테두리 색상지정
        </shape>

    </item>
    <item android:state_pressed="false">
        <shape>

            <solid android:color="#ffffff">
            </solid>
            <corners android:radius="5dp"></corners>
            <stroke android:width="0.5dp" android:color="#AAA8A6"></stroke>
            <padding android:top="10dp" android:bottom="5dp" android:right = "5dp" android:left="5dp"></padding>
            //테두리 색상지정
        </shape>

    </item>
</selector>